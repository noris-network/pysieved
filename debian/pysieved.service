[Unit]
Description=Sieve filtering server
After=network.target

[Service]
Type=forking
PIDFile=/tmp/pysieved.pid
User=root
Group=root
Restart=always
EnvironmentFile=/etc/default/pysieved
ExecStart=/usr/bin/pysieved $PYSIEVED_OPTS
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
